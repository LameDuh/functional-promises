{
  "exclude": ["dist", "tests", "misc", "docs", "docs-source", "coverage"],
  "extensions": [".js", ".ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "declaration": false,
    "noEmit": true,
    "pretty": true,
    "outDir": "dist",
    "lib": [
      "ES5", 
      "DOM",
      "ES2015.Iterable"
    ]
  }
}