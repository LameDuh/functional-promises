{
  "baseUrl": ".",
  "typeRoots": ["types"],
  "files": ["src/index.ts"],
  "include": ["src", "types"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "checkJs": true,
    "importHelpers": true,
    "lib": ["dom", "esnext"],
    "module": "AMD",
    "target": "ES2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": false,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "pretty": true,
    "outDir": "dist"
    
  }
}
